{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "globals": {
    "fetch": true
  },
  "rules": {
    "comma-dangle": 0,
    "arrow-parens": 0,
    "no-unused-expressions": ["error",{ "allowTernary": true }],
    "react/jsx-filename-extension": 0,
    "linebreak-style": ["error", "windows"],
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
